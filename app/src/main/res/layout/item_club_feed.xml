<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView9"
                android:src="@drawable/ic_speaker"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/tv_feed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="레알 5월 모임 공지입니다."
                android:textColor="#000000"
                android:textSize="48px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="22dp">

            <TextView
                android:id="@+id/tv_feed_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_feed_title"
                android:layout_below="@+id/tv_feed_title"
                android:text="작성자"
                android:textColor="#7a7a7a"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textSize="34px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최일지"
                android:id="@+id/tv_author"
                android:layout_marginRight="5dp"
                android:textSize="34px"
                android:textColor="#7a7a7a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:id="@+id/textView12"
                android:layout_marginRight="5dp"
                android:textSize="34px"
                android:textColor="#7a7a7a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.05.15"
                android:id="@+id/tv_feed_date"
                android:textSize="34px"
                android:textColor="#7a7a7a" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_feed_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_feed_title"
                android:text="Content"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:id="@+id/two_layout"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="167dp"
                    android:src="@drawable/ic_action_add_group"
                    android:id="@+id/two_1"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="167dp"
                    android:id="@+id/two_2"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:id="@+id/three_layout"
                android:visibility="gone">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_action_add_group"
                    android:id="@+id/three_1"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:id="@+id/three_2"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:id="@+id/three_3"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천"
                    android:id="@+id/textView6"
                    android:layout_marginRight="5dp"
                    android:textColor="#7a7a7a"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:id="@+id/tv_feed_like"
                    android:textColor="#7a7a7a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="건"
                    android:id="@+id/textView8"
                    android:layout_marginRight="5dp"
                    android:textColor="#7a7a7a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:id="@+id/textView9"
                    android:layout_marginRight="5dp"
                    android:textColor="#7a7a7a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글"
                    android:id="@+id/textView10"
                    android:layout_marginRight="5dp"
                    android:textColor="#7a7a7a"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:id="@+id/tv_feed_comment"
                    android:textColor="#7a7a7a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개"
                    android:id="@+id/textView15"
                    android:textColor="#7a7a7a" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:src="@drawable/btn_heart"
                android:id="@+id/button10" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:src="@drawable/btn_comment"
                android:id="@+id/bt_comment" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:src="@drawable/btn_share"
                android:id="@+id/button11" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>