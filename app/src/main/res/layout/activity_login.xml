<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/img_title"
            android:layout_marginTop="93dp"
            android:layout_centerHorizontal="true"
            android:layout_width="194dp"
            android:layout_height="194dp" />
        
        <LinearLayout
            android:id="@+id/layout_input_id"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="349dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_joinuser"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"/>
                <EditText
                    android:id="@+id/input_email"
                    android:hint="이메일 입력"
                    android:textColorHint="@color/join_input"
                    android:textSize="13sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/join_input"
                    android:layout_marginLeft="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="44dp" />
            </LinearLayout>
            <View
                android:background="@color/join_input"
                android:layout_below="@id/layout_input_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_input_password"
            android:layout_below="@id/layout_input_id"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="7dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_joinkey"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"/>
                <EditText
                    android:id="@+id/input_password"
                    android:hint="비밀번호 입력"
                    android:textColorHint="@color/join_input"
                    android:textSize="13sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/join_input"
                    android:layout_marginLeft="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="44dp" />
            </LinearLayout>
            <View
                android:background="@color/join_input"
                android:layout_below="@id/layout_input_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/btn_login"
            android:text="로그인"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/layout_input_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/login_btn_color"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp" />

        <LinearLayout
            android:id="@+id/layout_sns_login_btn"
            android:layout_below="@id/btn_login"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_login_facebook"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:background="@color/facebook_btn_bg"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/btn_login_twitter"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:background="@color/twitter_btn_bg"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/link_signup"
            android:layout_below="@id/layout_sns_login_btn"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_width="match_parent"
            android:text="아직 계정이 없으신가요? 회원가입하기"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/join_input"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>